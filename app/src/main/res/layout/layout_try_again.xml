<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/try_again_container"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:visibility="gone">

	<LinearLayout
		android:padding="@dimen/two_point"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:gravity="center_horizontal"
		android:layout_gravity="center">

		<TextView
			android:id="@+id/try_again_message"
			style="@style/TextAppearance.AppCompat.Subhead"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/common_error_try_again_message"/>

		<Button
			android:id="@+id/try_again_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/two_point"
			android:text="@string/common_error_try_again_btn_text"/>

	</LinearLayout>

</ScrollView>